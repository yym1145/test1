<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.test.mapper.UserMapper">
    <resultMap id="UserLoginVerifyDataResultMap" type="com.test.test.bo.UserLoginVerifyData">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <!-- 处理多对一或一对多关系：roleIds -->
        <collection property="roleIds" ofType="java.lang.Long">
            <result column="role_id" jdbcType="BIGINT"/>
        </collection>
    </resultMap>
    <select id="getUserLoginDataByAccount" resultMap="UserLoginVerifyDataResultMap">
        SELECT
            u.id,
            u.user_name,
            u.password,
            u.salt,
            ur.role_id
        FROM user u
                 LEFT JOIN user_role ur ON u.id = ur.user_id
        WHERE u.mail = #{mail}
    </select>
</mapper>
